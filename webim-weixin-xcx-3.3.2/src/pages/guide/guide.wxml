<view style="height: {{height}}px; overflow: hidden;">
	<image style="height: 100%; display: {{chatDisplay}}" src="../../images/chat_tabbar2x.png"></image>
	<image style="height: 100%; display: {{contactDisplay}}" src="../../images/contact_tabbar2x.png"></image>
	<image style="height: 100%; display: {{noticeDisplay}}" src="../../images/notice_tabbar2x.png"></image>
	<image style="height: 100%; display: {{settingDisplay}}" src="../../images/setting_tabbar2x.png"></image>

	<view class="tabberContainer">
		<view class="tabbar" data-item="chat" bindtap="changeItem"></view>
		<view class="tabbar" data-item="contact" bindtap="changeItem"></view>
		<view class="tabbar" data-item="notice" bindtap="changeItem"></view>
		<view class="tabbar" data-item="setting" bindtap="changeItem"></view>
	</view>

	<view class="login" bindtap="login"></view>
</view>